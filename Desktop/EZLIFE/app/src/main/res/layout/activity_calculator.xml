<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fcfcfd">
    
    <TextView android:id="@+id/editText1"
        android:gravity="center"
        android:background="#fcfcfd"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:textColor="#6e66f1"
        android:textStyle="bold"
        android:textSize="45dp">
    </TextView>
    <LinearLayout
        android:layout_height="85dp"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent">
        <Button
            android:text=" clear "
            android:id="@+id/buttonClear"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">
        </Button>
        <Button
            android:text=" ^ "
            android:textColor="#FCFCFD"
            android:id="@+id/buttonExpo"
            android:textSize="35dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">
        </Button>
        <Button
            android:text=" / "
            android:textSize="35dp"
            android:id="@+id/buttonDiv"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">
        </Button>
        </LinearLayout>
        
    <LinearLayout
        android:layout_height="85dp"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:background="#3a434f">
        <Button
            android:text=" 7 "
            android:id="@+id/button7"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667"
            ></Button>
        <Button
            android:text=" 8 "
            android:id="@+id/button8"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button android:text=" 9 "
            android:id="@+id/button9"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button
            android:text=" * "
            android:id="@+id/buttonMul"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_height="85dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:background="#3a434f">
        <Button
            android:text=" 4 "
            android:id="@+id/button4"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button
            android:text=" 5 "
            android:id="@+id/button5"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button android:text=" 6 "
            android:id="@+id/button6"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">
        </Button>
        <Button android:text=" - "
            android:id="@+id/buttonSub"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_height="85dp"
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:background="#3a434f">
        <Button android:text=" 1 "
            android:id="@+id/button1"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button android:text=" 2 "
            android:id="@+id/button2"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button android:text=" 3 "
            android:id="@+id/button3"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">
    </Button>
        <Button
            android:text=" + "
            android:id="@+id/buttonAdd"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_height="85dp"
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:background="#3a434f">
        <Button
            android:text=" * "
            android:id="@+id/buttonStar"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667"></Button>
        <Button
            android:text=" 0 "
            android:id="@+id/button0"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button android:text=" # "
            android:id="@+id/buttonHash"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667">

        </Button>
        <Button android:text=" = "
            android:id="@+id/buttonEq"
            android:textSize="35dp"
            android:textColor="#FCFCFD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#6dd667"></Button>
    </LinearLayout>
</LinearLayout>
