    <Button
        android:id="@+id/startWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/none"
        android:drawableTop="@drawable/icon_weather"
        android:focusable="true"
        android:text="Weather"
        android:textColor="@color/great_blue"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/startMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/none"
        android:drawableTop="@drawable/icon_map"
        android:focusable="true"
        android:text="Map"
        android:textColor="@color/great_blue"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/startWeather"
        android:layout_toRightOf="@+id/startWeather"
        android:layout_toEndOf="@+id/startWeather"
        android:layout_marginBottom="84dp" />


</RelativeLayout>